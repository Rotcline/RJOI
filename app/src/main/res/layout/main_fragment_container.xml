<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/bar_sup"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageView
        android:id="@+id/bar_sup"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/main_fragment_container"
        android:background="@android:color/background_dark"/>

    <ImageButton
        android:id="@+id/btn_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bar_sup"
        app:layout_constraintBottom_toBottomOf="@id/bar_sup"
        app:layout_constraintEnd_toEndOf="@id/bar_sup"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_baseline_create_24"
        android:background="@android:color/transparent"/>



  </androidx.constraintlayout.widget.ConstraintLayout>